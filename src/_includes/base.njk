<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/style.css">
    <script defer src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

    <div class="flex-wrapper">

        {% include 'header.njk' %}
        <main>
            {{ content | safe }}
        </main>
        {% include 'footer.njk' %}

    </div>

    <script src="../js/bundle.js"></script>
    <script>
    if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
        if (!user) {
            window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
            });
        }
        });
    }
    </script>
    <script>
        let namesHidden = true;
        const supportersList = document.getElementById("supporters-list");
        const showAndHideButton = document.getElementById("showAndHideButton");

        function showAndHideNames() {
            if (namesHidden) {
                supportersList.classList.remove("hidden");
                showAndHideButton.innerHTML = "Weniger anzeigen";
            } else {
                supportersList.classList.add("hidden");
                document.getElementById("supporter-section").scrollIntoView({behavior: "smooth"});
                showAndHideButton.innerHTML = "Alle anzeigen";
            }

            namesHidden = !namesHidden;
            console.log(namesHidden);
        }
    </script>
</body>
</html>